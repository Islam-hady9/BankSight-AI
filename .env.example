# Environment Configuration
ENV=development  # development, staging, production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=banksight
POSTGRES_PASSWORD=changeme
POSTGRES_DB=banksight_db
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=banksight
MONGODB_PASSWORD=changeme
MONGODB_DB=banksight_docs
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Vector Database - Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=banksight-vectors

# Vector Database - Qdrant (Alternative)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=banksight_documents

# AI/ML - Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# AI/ML - OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Document Storage
STORAGE_TYPE=local  # local, s3, minio
S3_BUCKET_NAME=banksight-documents
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# MinIO (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=banksight-documents

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_RETRIEVAL_RESULTS=10
RERANK_TOP_K=5

# MCP Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=9001
MCP_ENABLE_CONFIRMATION=true
MCP_HIGH_RISK_THRESHOLD=1000  # Amount threshold for confirmations

# Mock Banking API (for development)
MOCK_BANK_API_URL=http://localhost:8001
ENABLE_MOCK_MODE=true

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,csv,xlsx,xls,pptx,ppt,png,jpg,jpeg,mp3,wav,mp4

# OCR
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng

# Audio Transcription
WHISPER_MODEL=base  # tiny, base, small, medium, large

# Session
SESSION_TIMEOUT_MINUTES=30
